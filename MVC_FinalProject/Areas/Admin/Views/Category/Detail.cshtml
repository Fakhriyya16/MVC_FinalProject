@model CategoryDetailVM
@{
    ViewData["Title"] = "Detail";
}
<div>
    <a type="button" class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back</a>
</div>
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Name</h1>
        <img src="~/assets/img/@Model.Image" style="width:400px;height:200px;" />
        <p class="lead text-muted">Created Date: @Model.CreatedDate</p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <h3>Courses</h3>
        <div class="row">
            @foreach (var item in Model.Courses)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="~/assets/img/@item.CourseImages.FirstOrDefault(m=>m.IsMain).Name">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

