@model List<InstructorTableVM>
@{
    ViewData["Title"] = "Index";
}

<section id="instructor-table">
    <div class="container">
        <a asp-controller="Instructor" asp-action="Create" type="button" class="btn btn-success">Create</a>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Image</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Courses</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="instructor-data">
                        <th scope="row">@item.Id</th>
                        <td><img src="~/assets/img/@item.Image" style="width:100px;height:100px;" /></td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Courses</td>
                        <td>
                            <a type="button" asp-controller="Instructor" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detail</a>
                            <a type="button" asp-controller="Instructor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <form method="post" asp-controller="Instructor" asp-action="Delete" asp-route-id="@item.Id">
                                <button data-id="@item.Id" class="btn btn-danger btn-sm delete-instructor-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section js {
    <script src="~/Admin/assets/js/delete.js"></script>
}

