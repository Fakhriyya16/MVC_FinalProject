@model StudentEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label class="float-label">Full Name</label>
            <input asp-for="FullName" class="form-control">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="float-label">Email</label>
            <input asp-for="Bio" class="form-control">
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Select Courses</label><br />
            @foreach (var course in ViewBag.Courses)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="CourseIds" value="@course.Value" id="course_@course.Value">
                    <label class="form-check-label" for="course_@course.Value">
                        @course.Text
                    </label>
                </div>
            }
        </div>
        <div class="form-group">
            <label class="float-label">Image</label>
            <input asp-for="NewImage" accept="image/*" class="form-control">
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>

